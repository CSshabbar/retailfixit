# Server
PORT=3000
NODE_ENV=development

# Azure Cosmos DB
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=RetailFixItDB
COSMOS_CONTAINER_JOBS=Jobs
COSMOS_CONTAINER_USERS=Users

# JWT Authentication
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h

# Azure SignalR Service (Serverless mode)
SIGNALR_CONNECTION_STRING=Endpoint=https://your-signalr.service.signalr.net;AccessKey=your-access-key;Version=1.0;

# Azure Blob Storage
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
